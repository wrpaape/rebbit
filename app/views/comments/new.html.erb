<%= form_tag(create_comment_path, class: "form-group" ) do %>
  <div class="row">
    <div class="col-sm-10 black center"></br>
      <%= text_area_tag(:body, nil, {rows: 10, cols: 60, color: "black", placeholder: "LOLOLOLOLOL"})  %>
    </div>
  </div>
    <%= hidden_field_tag :user_id, @current_user.id %>
    <%= hidden_field_tag :post_id, @post.id %>
  <div class="row">
    <div class="col-sm-10 black center"></br>
      <%= submit_tag "submit", class: "black" %>
<!--       <button type="submit" class="btn btn-default">submit</button> -->
    </div>
  </div>
<% end %>
