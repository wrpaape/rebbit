<% if @subrebbit.posts.count == 0 %>
  <div class="row profile">
    <div class="col-sm-12 prof-header"><%= "#{@subrebbit.category} has no posts" %></div>
  </div>
<% else %>
  <div class="row profile">
    <div class="col-sm-12 prof-header"><%= "welcome to #{@subrebbit.category}" %></div>
  </div>

  <div class="row profile">
    <div class="col-sm-12 "><%= link_to("new post", new_post_path(@subrebbit), class: "subtitle white") %></div>
  </div>

  <div class="row profile">
    <div class="col-sm-12 ">sort by: <%= link_to("latest", subrebbit_path(:params => { sort_by: "latest"}), class: "white") %> | <%= link_to("carma", subrebbit_path(:params => { sort_by: "carma"}), class: "white") %></div>
  </div>

  <div class="row subtitle">
    <div class="col-sm-2">(u/d)</div>
    <div class="col-sm-5">title</div>
    <div class="col-sm-2">author</div>
    <div class="col-sm-3">created</div>
  </div>

  <% @posts.each do |post| %>
    <div class="row smaller"></br>
      <div class="col-sm-2">(<%= link_to(post.votes.first.upvotes, votes_path(:params => { user_id: post.user_id, post_id: post.id, upvotes: 1 }), :method => :post, class: "smaller") + "/" + link_to(post.votes.first.downvotes, votes_path(:params => { user_id: post.user_id, post_id: post.id, downvotes: 1} ), :method => :post, class: "smaller") %>)</div>
      <div class="col-sm-5"><%= link_to(post.title, post_path(post, :params => { sort_by: "latest"}), class: "smaller") %></div>
      <div class="col-sm-2"><%= link_to(post.user.name, user_path(post.user), class: "smaller") %></div>
      <div class="col-sm-3"><%= post.created_at.strftime("%m/%d/%y %r") %></div>
    </div>
  <% end %>
<% end %>
